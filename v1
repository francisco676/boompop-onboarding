            <p style={{ fontSize: 14, color: "#94a3b8", margin: 0 }}>Let's get BoomPop's team activated and posting üöÄ</p>
          </div>
        </div>
      ),
    ];

    function Deck() {
      const [cur, setCur] = useState(0);
      const total = slides.length;
      const Slide = slides[cur];
      return (
        <div style={{ width: "100%", maxWidth: 960, margin: "0 auto" }}>
          <div style={{ borderRadius: 16, overflow: "hidden", border: "1px solid rgba(255,255,255,0.08)", boxShadow: "0 20px 60px rgba(0,0,0,0.5)" }}>
            <div style={{ height: 540, position: "relative" }}>
              <Slide />
            </div>
            <div style={{ background: "#0a0a14", padding: "12px 24px", display: "flex", alignItems: "center", justifyContent: "space-between", borderTop: "1px solid rgba(255,255,255,0.06)" }}>
              <button onClick={() => setCur(Math.max(0, cur - 1))} disabled={cur === 0} style={{ background: cur === 0 ? "rgba(255,255,255,0.03)" : "rgba(129,140,248,0.12)", border: "1px solid rgba(255,255,255,0.08)", color: cur === 0 ? "#475569" : "#818cf8", padding: "8px 20px", borderRadius: 8, cursor: cur === 0 ? "default" : "pointer", fontSize: 13, fontWeight: 600 }}>‚Üê Back</button>
              <div style={{ display: "flex", gap: 6, alignItems: "center" }}>
                {slides.map((_,i) => (
                  <div key={i} onClick={() => setCur(i)} style={{ width: i === cur ? 24 : 8, height: 8, borderRadius: 4, background: i === cur ? "#818cf8" : "rgba(255,255,255,0.1)", cursor: "pointer", transition: "all 0.2s" }} />
                ))}
              </div>
              <button onClick={() => setCur(Math.min(total - 1, cur + 1))} disabled={cur === total - 1} style={{ background: cur === total - 1 ? "rgba(255,255,255,0.03)" : "rgba(129,140,248,0.12)", border: "1px solid rgba(255,255,255,0.08)", color: cur === total - 1 ? "#475569" : "#818cf8", padding: "8px 20px", borderRadius: 8, cursor: cur === total - 1 ? "default" : "pointer", fontSize: 13, fontWeight: 600 }}>Next ‚Üí</button>
            </div>
          </div>
        </div>
      );
    }

    ReactDOM.createRoot(document.getElementById("root")).render(<Deck />);
  </script>
</body>
